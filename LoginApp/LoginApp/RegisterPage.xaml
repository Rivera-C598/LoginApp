<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.RegisterPage">
    <StackLayout Margin="10">
        <Label Text="Register" FontSize="30" HorizontalOptions="CenterAndExpand" />
        <Entry Placeholder="Username" x:Name="usernameEntry" />
        <Entry Placeholder="Password" x:Name="passwordEntry" IsPassword="True" />
        <Button Text="Register" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>